{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "commitMessagePrefix": ":arrow_up:",
  "packageRules": [
    {
      "matchPackageNames": [
        "ghcr.io/linuxserver/sonarr"
      ],
      "versioning": "regex:^(?<compatibility>.*?)-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$"
    }
  ]
}
