{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "commitMessagePrefix": ":arrow_up:",
  "packageRules": [
    {
      "matchPackageNames": [
        "linuxserver/sonarr",
        "linuxserver/radarr",
        "linuxserver/prowlarr"
      ],
      "versioning": "regex:^version-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)\\.(?<build>\\d+)$"
    }
  ]
}
