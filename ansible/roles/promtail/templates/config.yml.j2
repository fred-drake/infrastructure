server:
    http_listen_port: 9080
    grpc_listen_port: 0

positions:
    filename: /tmp/positions.yaml

clients:
    - url: https://loki.{{ secret.domain }}/loki/api/v1/push

# local machine logs
scrape_configs:
    - job_name: local
      static_configs:
        - targets:
            - localhost
          labels:
            job: varlogs
            __path__: /var/log/*log
    - job_name: docker
      pipeline_stages:
        - docker: {}
      static_configs:
        - labels:
            job: docker
            __path__: /var/lib/docker/containers/*/*-json.log
